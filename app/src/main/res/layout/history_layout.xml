<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:ignore="MissingPrefix" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_marginTop="20dp">
                <!--グループ名を表示-->
                <TextView
                    android:text="グループ名"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/textView_GroupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    />

            </TableRow>
            <TableRow
                android:layout_marginTop="20dp">
                <!--ゲーム回数を表示-->
                <TextView
                    android:text="ゲーム回数"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/textView_CountGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
            <TableRow
                android:layout_marginTop="20dp">
                <TextView
                    android:text="支払総額"
                    android:textSize="25sp"
                    />

                <!--総支払額を表示-->
                <TextView
                    android:id="@+id/textView_PayMoneySum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>
        </TableLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="各プレイヤー支払総額"/>

        <!--Tableを表示-->
        <TableLayout
            android:id="@+id/table_playerPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >

        </TableLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="各プレイヤー支払総額(端数切捨て)"/>

        <!--Tableを表示-->
        <TableLayout
            android:id="@+id/table_playerRoundPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >

        </TableLayout>

    </LinearLayout>


</ScrollView>