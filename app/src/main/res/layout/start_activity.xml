<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grad_orengi"
    android:weightSum="1">

    <Button
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/gamaStart_btn"
        android:text="@string/gameStart_btn"
        android:layout_weight="0.05"
        android:textSize="25sp"
        android:background="@drawable/circle_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cardList_btn"
        android:text="@string/cardList_btn"
        android:layout_weight="0.05"
        android:textSize="15sp"
        android:background="@drawable/circle_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/reset_btn"
        android:background="@drawable/circle_button"
        android:text="データリセット"
        android:layout_weight="0.05"
        android:textSize="10sp"
        android:layout_alignTop="@+id/cardList_btn"
        android:layout_alignParentStart="true" />


</RelativeLayout>